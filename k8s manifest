apiVersion: apps/v1
kind: Deployment
metadata:
  name: your-app
spec:
  replicas: 3
  selector:
    matchLabels:
      app: your-app
  template:
    metadata:
      labels:
        app: your-app
    spec:
      containers:
        - name: your-app
          image: yourawsaccountid.dkr.ecr.us-west-2.amazonaws.com/app_repo:latest
          ports:
            - containerPort: 8080

